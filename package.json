{
  "name": "remix-stack-app-name",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf build && rimraf public/build && rimraf css",
    "build": "run-s build:*",
    "build:css": "npm run generate:tailwind -- --minify && npm run generate:sass -- --style=compressed",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev",
    "dev:tailwind": "npm run generate:tailwind -- --watch",
    "dev:sass": "npm run generate:sass -- --watch --no-source-map",
    "generate:sass": "sass app/styles/:public/css",
    "generate:tailwind": "npx tailwindcss -o ./public/css/tailwind.css",
    "start": "remix-serve build",
    "format": "prettier --write \"app/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "isbot": "^3.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@tailwindcss/typography": "^0.5.7",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "daisyui": "^2.38.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
}
